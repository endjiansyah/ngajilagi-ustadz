<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ngaji_ustadzah.Views.BacaanPage"
             Title="1. Al-Fatihah"
             >

    <ScrollView>
        <VerticalStackLayout>

        <StackLayout
            HorizontalOptions="Fill"
            BackgroundColor="#FFEDAD"
            >
            <StackLayout
                Spacing="32"
                Padding="0,9"
                Orientation="Horizontal"
                HorizontalOptions="Center">


                <Label
                Text="Makkah"
                FontSize="16"
                />
                <Label
                FontAttributes="Bold"
                Text="Pembukaan"
                FontSize="16"
                FontFamily="Nunito"

                />
                <Label
                Text="7 Ayat"
                FontSize="16"
                />

            </StackLayout>

        </StackLayout>

        <Grid Margin="0,30" Padding="28,0" RowSpacing="30">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Image 
                Grid.Row="0" 
                Source="ayat.png"
                WidthRequest="44"
                HeightRequest="44"
                HorizontalOptions="Start"
                VerticalOptions="Start"
                />
            <Label 
                Grid.Row="0"
                Text="1"
                HorizontalOptions="Start"
                VerticalOptions="Start"
                FontAttributes="Bold"
                FontFamily="Lateef"
                TextColor="White"
                Margin="18,11"
                />
            <Label
                Grid.Row="0" 
                Grid.Column="1"
                Text="بِسْمِ اللّٰهِ الرَّحْمٰنِ الرَّحِيْمِ"
                FontSize="20"
                HorizontalOptions="End"
                VerticalOptions="Center" />
            
            <Image 
                Grid.Row="1" 
                Source="ayat.png"
                WidthRequest="44"
                HeightRequest="44"
                HorizontalOptions="Start"
                VerticalOptions="Start"
                />
            <Label 
                Grid.Row="1"
                Text="2"
                HorizontalOptions="Start"
                VerticalOptions="Start"
                FontAttributes="Bold"
                FontFamily="Lateef"
                TextColor="White"
                Margin="18,11"
                />
            <Label
                Grid.Row="1" 
                Grid.Column="1"
                Text="اَلْحَمْدُ لِلّٰهِ رَبِّ الْعٰلَمِيْنَ"
                FontSize="20"
                HorizontalOptions="End"
                VerticalOptions="Center" />

            <Image 
                Grid.Row="2" 
                Source="ayat.png"
                WidthRequest="44"
                HeightRequest="44"
                HorizontalOptions="Start"
                VerticalOptions="Start"
                />
            <Label 
                Grid.Row="2"
                Text="3"
                HorizontalOptions="Start"
                VerticalOptions="Start"
                FontAttributes="Bold"
                FontFamily="Lateef"
                TextColor="White"
                Margin="18,11"
                />
            <Label
                Grid.Row="2" 
                Grid.Column="1"
                Text="الرَّحْمٰنِ الرَّحِيْمِ"
                FontSize="20"
                HorizontalOptions="End"
                VerticalOptions="Center" />

            <Image 
                Grid.Row="3" 
                Source="ayat.png"
                WidthRequest="44"
                HeightRequest="44"
                HorizontalOptions="Start"
                VerticalOptions="Start"
                />
            <Label 
                Grid.Row="3"
                Text="4"
                HorizontalOptions="Start"
                VerticalOptions="Start"
                FontAttributes="Bold"
                FontFamily="Lateef"
                TextColor="White"
                Margin="18,11"
            />
            <Label
                Grid.Row="3" 
                Grid.Column="1"
                Text="مٰلِكِ يَوْمِ الدِّيْنِ"
                FontSize="20"
                HorizontalOptions="End"
                VerticalOptions="Center" />


            <Image 
                Grid.Row="4" 
                Source="ayat.png"
                WidthRequest="44"
                HeightRequest="44"
                HorizontalOptions="Start"
                VerticalOptions="Start"
                />
            <Label 
                Grid.Row="4"
                Text="5"
                HorizontalOptions="Start"
                VerticalOptions="Start"
                FontAttributes="Bold"
                FontFamily="Lateef"
                TextColor="White"
                Margin="18,11"
                />
            <Label
                Grid.Row="4" 
                Grid.Column="1"
                Text="اِيَّاكَ نَعْبُدُ وَاِيَّاكَ نَسْتَعِيْنُ"
                FontSize="20"
                HorizontalOptions="End"
                VerticalOptions="Center" />

            <Image 
                Grid.Row="5" 
                Source="ayat.png"
                WidthRequest="44"
                HeightRequest="44"
                HorizontalOptions="Start"
                VerticalOptions="Start"
                />
            <Label 
                Grid.Row="5"
                Text="6"
                HorizontalOptions="Start"
                VerticalOptions="Start"
                FontAttributes="Bold"
                FontFamily="Lateef"
                TextColor="White"
                Margin="18,11"
                /> 

            <Label
                Grid.Row="5" 
                Grid.Column="1"
                Text="اِھْدِنَا الصِّرَاطَ الْمُسْتَـقِيْمَ"
                FontSize="20"
                HorizontalOptions="End"
                VerticalOptions="Center" />


            <Image 
                Grid.Row="6" 
                Source="ayat.png"
                WidthRequest="44"
                HeightRequest="44"
                HorizontalOptions="Start"
                VerticalOptions="Start"
                />
            <Label 
               Grid.Row="6"
               Text="7"
               HorizontalOptions="Start"
               VerticalOptions="Start"
               FontAttributes="Bold"
               FontFamily="Lateef"
               TextColor="White"
               Margin="18,11"
               />

            <Label
                Grid.Row="6" 
                Grid.Column="1"
                Text="صِرَاطَ الَّذِيْنَ اَنْعَمْتَ عَلَيْهِمْ ەۙ غَيْرِ الْمَغْضُوْبِ عَلَيْهِمْ وَلَا الضَّاۤلِّيْنَ"
                FontSize="20"
                HorizontalOptions="End"
                VerticalOptions="Center" />

        </Grid>

    </VerticalStackLayout>
    </ScrollView>
</ContentPage>